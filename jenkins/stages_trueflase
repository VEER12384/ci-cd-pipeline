boolean isBuild=true
pipeline{
    agent any

    stages{
        stage('A'){
            steps{
            script{
                try{
                echo 'Stage A is Running'
                    //sh 'exit 1'
            }catch(Exception e){
                echo 'Stage A Failed'
                isBuild=false
            }
            }
        }
        }

        stage('B'){
            when {
                expression {
                    isBuild == true
                }
            }
            steps{
                echo 'Stage B is running'
            }
        }

        stage('C'){
            when {
                expression {
                    isBuild == false
                }
            }
            steps{
                echo 'Stage C is running'
            }
        }
    }
}
